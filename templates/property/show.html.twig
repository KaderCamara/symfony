{% extends 'base.html.twig' %}

{% block body %}
    <div class="jumbotron d-flex flex-column justify-content-center m-0" style="background-image:url({{property.picture}}); height:1000px; width:auto;">
          <div class="container">
        <div class="row align-items-center justify-content-center text-center">
          <div class="col-md-10">
            <span class="d-inline-block text-white px-3 mb-3 property-offer-type rounded"> Details </span>
            <h1 class="mb-2" style="font-weight:bold; font-size:6em; color:black;">{{ property.libelle }}</h1>
            <p class="mb-5"><strong class="h2 text-success font-weight-bold">{{ property.formattedPrice }} FCFA</strong></p>
          </div>
        </div>
      </div>
    </div>

    <div class="site-section site-section-sm">
      <div class="container">
        <div class="row">
          <div class="col-lg-8">
            <div class="m-0 p-0">
            <img src="{{property.picture}}" style="height:500px;width: 730px;">
            </div>
            <div class="bg-white property-body border-bottom border-left border-right">
              <div class="row mb-5">
                <div class="col-md-6 d-inline">
                  <strong class="text-success h1 mb-3">{{property.formattedprice}} FCFA</strong>
                </div>
                <div class="col-md-6">
                  <h1 style="font-size:2.8em; text-align:right">{{property.zone}}<h1>
                </div>
              </div>
              <div class="row mb-5">
                <div class="col-md-6 col-lg-4 text-center border-bottom border-top py-3">
                  <span class="d-inline-block text-black mb-0 caption-text">Type</span>
                  <strong class="d-block">{{ property.typetype }}</strong>
                </div>
                <div class="col-md-6 col-lg-4 text-center border-bottom border-top py-3">
                  <span class="d-inline-block text-black mb-0 caption-text">Usage</span>
                  <strong class="d-block">{{ property.typeutility }}</strong>
                </div>
                <div class="col-md-6 col-lg-4 text-center border-bottom border-top py-3">
                  <span class="d-inline-block text-black mb-0 caption-text">Periode</span>
                  <strong class="d-block">{{ property.periode }}</strong>
                </div>
              </div>
              <h2 class="h4 text-black">More Info</h2>
              <p>{{property.description}}
                {% if property.description == null %} No Description {% endif %}
              </p>

            </div>
          </div>
          <div class="col-lg-4">

            <div class="bg-white widget border rounded">

              <h3 class="h4 text-black widget-title mb-3">Contact Agence</h3>
              <form action="" class="form-contact-agent">
                <div class="form-group">
                  <label for="name">Name</label>
                  <input type="text" id="name" class="form-control">
                </div>
                <div class="form-group">
                  <label for="email">Email</label>
                  <input type="email" id="email" class="form-control">
                </div>
                <div class="form-group">
                  <label for="phone">Phone</label>
                  <input type="text" id="phone" class="form-control">
                </div>
                <div class="form-group">
                  <input type="submit" id="phone" class="btn btn-primary" value="Send Message">
                </div>
              </form>
            </div>

            <div class="bg-white widget border rounded">
              <h3 class="h4 text-black widget-title mb-3">Chers Interéssés</h3>
              <p>Merci d'avoir fait appel à E-221</p>
              <p>Nous vous reviendrons aussi vite que possible</p>
            </div>

          </div>
          
        </div>
      </div>
    </div>

   

    
{% endblock %}